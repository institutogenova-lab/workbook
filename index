<script>
    let cur = 1;
    const total = 80;

    // Gerador de páginas para preencher as lacunas das 80 páginas
    const container = document.getElementById('dynamic-pages');
    for(let i=1; i<=80; i++) {
        if(!document.getElementById('p'+i)) {
            let div = document.createElement('div');
            div.id = 'p'+i;
            div.className = 'page';
            div.innerHTML = `<h2>Página ${i}: Profundidade Neural</h2>
                             <p>Explorando o nível ${i} do conhecimento. A neurociência nos ensina que a cada nova informação, uma nova conexão sináptica é formada.</p>
                             <div class="fact-card">Dica Científica #${i}: O cérebro não diferencia uma experiência real de uma vivida intensamente pela imaginação.</div>
                             <textarea placeholder="Anote seus insights da página ${i}..."></textarea>`;
            container.appendChild(div);
        }
    }

    function move(step) {
        document.getElementById('p'+cur).classList.remove('active');
        cur += step;
        if(cur < 1) cur = 1;
        if(cur > total) cur = total;
        
        document.getElementById('p'+cur).classList.add('active');
        document.getElementById('fill').style.width = (cur/total*100) + '%';
        document.getElementById('pCount').innerText = `Página ${cur} / ${total}`;
        document.getElementById('bPrev').style.visibility = (cur === 1) ? 'hidden' : 'visible';
        
        document.getElementById('view').scrollTop = 0;
    }
    move(0);
</script>

